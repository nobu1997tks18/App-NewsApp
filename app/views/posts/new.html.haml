.input-page
  = form_with model: @post, local: true do |f|
    .input-form
      .input-form__title
        %h1 New Post
      .input-form__template
        =render 'shared/post_errors_messages'
        .form
          =f.label "Genre"
          .form-checkbox
            =f.collection_check_boxes :genre_ids, Genre.all, :id, :name
          =f.label "Text"
          =f.text_area :content ,placeholder: "140文字以内"
          =f.label "URL"
          =f.text_field :url, placeholder: "サイトURLを記入してください"
        .form-submit
          = f.submit "Post"